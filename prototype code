            <div className="w-5 h-5 border-3 border-white border-t-transparent rounded-full animate-spin"></div>
            Generating magic...
          </>
        ) : (
          <>
            <Zap className="w-6 h-6" />
            AI Generate Full Day
          </>
        )}
      </button>
    </div>

    {/* Daily Summary */}
    {totalCalories > 0 && (
      <div className="px-6 pb-4">
        <div className="bg-gradient-to-r from-purple-50 to-pink-50 border-2 border-purple-200 rounded-2xl p-5 shadow-sm">
          <div className="flex items-center justify-between mb-3">
            <span className="text-slate-700 font-medium">Daily Total</span>
            <Award className="w-6 h-6 text-purple-500" />
          </div>
          <div className="grid grid-cols-2 gap-4">
            <div>
              <p className="text-3xl font-bold text-purple-600">{totalCalories}</p>
              <p className="text-xs text-slate-500">calories</p>
            </div>
            <div>
              <p className="text-3xl font-bold text-pink-600">{totalProtein}g</p>
              <p className="text-xs text-slate-500">protein</p>
            </div>
          </div>
        </div>
      </div>
    )}

    {/* Meals */}
    <div className="px-6 py-4 space-y-4">
      {MEALS.map((mealType, idx) => {
        const meal = dayMeals[mealType];
        const mealIcons = {
          'Breakfast': Coffee,
          'Lunch': UtensilsCrossed,
          'Dinner': Moon
        };
        const MealIcon = mealIcons[mealType];
        
        return (
          <div 
            key={mealType} 
            className="bg-white rounded-3xl p-5 shadow-md border border-slate-100"
            style={{
              animation: `slideIn 0.3s ease-out ${idx * 0.1}s both`
            }}
          >
            <div className="flex items-center justify-between mb-4">
              <div className="flex items-center gap-3">
                <div className="w-10 h-10 rounded-xl bg-gradient-to-br from-purple-100 to-pink-100 flex items-center justify-center">
                  <MealIcon className="w-5 h-5 text-purple-600" />
                </div>
                <h3 className="font-bold text-slate-800 text-lg">{mealType}</h3>
              </div>
              {!meal && (
                <button
                  onClick={() => setShowMealSelector({ day: selectedDay, mealType })}
                  className="p-2 bg-purple-100 text-purple-600 rounded-xl hover:bg-purple-200 transition-all duration-300"
                >
                  <Plus className="w-5 h-5" />
                </button>
              )}
            </div>

            {meal ? (
              <div className="bg-gradient-to-br from-purple-50 to-pink-50 rounded-2xl p-4 relative border-2 border-purple-100">
                <button
                  onClick={() => {
                    const key = `${selectedDay}-${mealType}`;
                    const updated = { ...mealPlan };
                    delete updated[key];
                    setMealPlan(updated);
                    localStorage.setItem('mealPlan', JSON.stringify(updated));
                  }}
                  className="absolute top-3 right-3 p-2 bg-white rounded-xl shadow-sm hover:bg-red-50 hover:shadow-md transition-all duration-300 group"
                >
                  <Trash2 className="w-4 h-4 text-slate-400 group-hover:text-red-500 transition-colors" />
                </button>
                <div className="flex items-center gap-4 mb-4">
                  <div className={`w-16 h-16 rounded-2xl bg-gradient-to-br ${meal.gradient} flex items-center justify-center text-3xl shadow-lg`}>
                    {meal.emoji}
                  </div>
                  <div className="flex-1">
                    <p className="font-bold text-slate-800 text-lg mb-1">{meal.name}</p>
                    <div className="flex items-center gap-3 text-sm text-slate-600">
                      <span className="flex items-center gap-1">
                        <Flame className="w-4 h-4 text-orange-500" />
                        {meal.calories}
                      </span>
                      <span className="flex items-center gap-1">
                        <Zap className="w-4 h-4 text-blue-500" />
                        {meal.protein}g
                      </span>
                    </div>
                  </div>
                </div>
                
                <div className="grid grid-cols-3 gap-2">
                  <div className="text-center p-2 bg-white rounded-xl">
                    <p className="text-xs text-slate-500 mb-1">Carbs</p>
                    <p className="text-sm font-bold text-slate-800">{meal.carbs}g</p>
                  </div>
                  <div className="text-center p-2 bg-white rounded-xl">
                    <p className="text-xs text-slate-500 mb-1">Fats</p>
                    <p className="text-sm font-bold text-slate-800">{meal.fats}g</p>
                  </div>
                  <div className="text-center p-2 bg-white rounded-xl">
                    <p className="text-xs text-slate-500 mb-1">Time</p>
