const MealPlanView = () => {
const getDayMeals = (day) => {
const meals = {};
MEALS.forEach(meal => {
const key = `${day}-${meal}`;
meals[meal] = mealPlan[key] || null;
});
return meals;
};

```
const dayMeals = getDayMeals(selectedDay);
const totalCalories = Object.values(dayMeals).reduce((sum, meal) => sum + (meal?.calories || 0), 0);
const totalProtein = Object.values(dayMeals).reduce((sum, meal) => sum + (meal?.protein || 0), 0);

return (
  <div className={`pb-6 bg-gradient-to-b from-slate-50 to-white min-h-screen transition-opacity duration-500 ${animateIn ? 'opacity-100' : 'opacity-0'}`}>
    <div className="bg-gradient-to-br from-purple-500 via-purple-600 to-pink-600 px-6 pt-12 pb-8 relative overflow-hidden">
      <div className="absolute top-0 right-0 w-40 h-40 bg-white/10 rounded-full blur-3xl" />
      <div className="relative z-10">
        <h1 className="text-3xl font-bold text-white mb-2">Meal Plan</h1>
        <p className="text-purple-100">Plan your weekly nutrition</p>
      </div>
    </div>

    {/* Day Selector */}
    <div className="px-6 py-5 bg-white border-b border-slate-200 sticky top-0 z-10 backdrop-blur-xl bg-white/90">
      <div className="flex gap-2 overflow-x-auto pb-2 scrollbar-hide">
        {DAYS.map((day, idx) => (
          <button
            key={day}
            onClick={() => setSelectedDay(day)}
            className={`px-5 py-3 rounded-2xl font-semibold whitespace-nowrap transition-all duration-300 ${
              selectedDay === day 
                ? 'bg-gradient-to-r from-purple-500 to-pink-500 text-white shadow-lg scale-105' 
                : 'bg-slate-100 text-slate-600 hover:bg-slate-200'
            }`}
            style={{
              animation: `slideIn 0.3s ease-out ${idx * 0.05}s both`
            }}
          >
            {day}
          </button>
        ))}
      </div>
    </div>

    {/* AI Generate Button */}
    <div className="px-6 py-4">
      <button
        onClick={generateAIMealPlan}
        disabled={isGeneratingMeals}
        className="w-full bg-gradient-to-r from-purple-500 via-pink-500 to-orange-500 text-white py-4 rounded-2xl font-bold flex items-center justify-center gap-3 disabled:opacity-50 shadow-lg hover:shadow-xl hover:scale-[1.02] active:scale-[0.98] transition-all duration-300"
