const CalculatorView = () => {
const [formData, setFormData] = useState({ age: â€˜â€™, gender: â€˜maleâ€™, weight: â€˜â€™, height: â€˜â€™, heightFeet: â€˜â€™, heightInches: â€˜â€™, currentWeight: â€˜â€™, targetWeight: â€˜â€™, pace: 1 });

```
const handleCalculate = () => {
  if (!formData.age || !formData.weight || !formData.currentWeight || !formData.targetWeight) {
    alert('Please fill all fields');
    return;
  }
  
  let w = parseFloat(formData.weight);
  let h = unit === 'imperial' ? ((parseFloat(formData.heightFeet) || 0) * 12 + (parseFloat(formData.heightInches) || 0)) * 2.54 : parseFloat(formData.height);
  if (unit === 'imperial') w = w * 0.453592;
  
  const bmr = formData.gender === 'male' ? (10 * w) + (6.25 * h) - (5 * parseInt(formData.age)) + 5 : (10 * w) + (6.25 * h) - (5 * parseInt(formData.age)) - 161;
  const tdee = bmr * 1.55;
  const current = parseFloat(formData.currentWeight);
  const target = parseFloat(formData.targetWeight);
  const pace = parseFloat(formData.pace);
  const isLosing = target < current;
  const calorieGoal = Math.round(isLosing ? tdee - (pace * (unit === 'imperial' ? 3500 : 7700) / 7) : tdee + (pace * (unit === 'imperial' ? 3500 : 7700) / 7));
  
  const results = { 
    bmr: Math.round(bmr), 
    tdee: Math.round(tdee), 
    calorieGoal, 
    weeklyChange: isLosing ? -pace : pace, 
    weeksToGoal: Math.ceil(Math.abs(target - current) / pace), 
    macros: { 
      protein: Math.round((calorieGoal * 0.30) / 4), 
      carbs: Math.round((calorieGoal * 0.40) / 4), 
      fats: Math.round((calorieGoal * 0.30) / 9) 
    } 
  };
  
  setTdeeResults(results);
  localStorage.setItem('tdeeData', JSON.stringify({ formData, unit, results }));
};

return (
  <div className={`pb-6 bg-gradient-to-b from-slate-50 to-white min-h-screen transition-opacity duration-500 ${animateIn ? 'opacity-100' : 'opacity-0'}`}>
    <div className="bg-gradient-to-br from-teal-500 via-teal-600 to-cyan-600 px-6 pt-12 pb-8">
      <h1 className="text-3xl font-bold text-white mb-2">Calculator</h1>
